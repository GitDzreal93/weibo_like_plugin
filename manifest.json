{
  "manifest_version": 3,
  "name": "微博控评助手",
  "version": "1.0.0",
  "description": "自动在微博评论中查找关键词并点赞的Chrome插件",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://weibo.com/*",
    "https://m.weibo.cn/*",
    "https://www.weibo.com/*",
    "http://weibo.com/*",
    "http://m.weibo.cn/*",
    "http://www.weibo.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://weibo.com/*",
        "https://m.weibo.cn/*",
        "https://www.weibo.com/*",
        "http://weibo.com/*",
        "http://m.weibo.cn/*",
        "http://www.weibo.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "微博控评助手"
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
